<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/feed_item_user_picture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:src="@drawable/profile_pic" />

    <TextView
        android:id="@+id/feed_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/feed_item_user_picture"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/feed_item_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/feed_item_user_name"
        android:padding="5dp" />

    <TextView
        android:id="@+id/feed_item_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_item_image"
        android:textStyle="bold"
        android:textColor="#4981CE"/>

    <TextView
        android:id="@+id/feed_item_comment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_item_like_count" />

    <TextView
        android:id="@+id/feed_item_comment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_item_comment1" />

    <TextView
        android:id="@+id/add_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_item_comment2"
        android:text="Add a comment"
        android:textColor="#707070" />
</RelativeLayout>