<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/feed_item_user_picture"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/profile_pic" />

    <TextView
        android:id="@+id/feed_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/feed_item_user_picture"
        android:text="coolcatcaren"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/feed_item_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/feed_item_user_name"
        android:padding="5dp"
        android:src="@drawable/profile_pic" />

    <TextView
        android:id="@+id/feed_item_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_item_image"
        android:text="1200 likes"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/feed_item_comment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_item_like_count"
        android:text="this is the first comment on the picture" />

    <TextView
        android:id="@+id/feed_item_comment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_item_comment1"
        android:text="this is the second comment on this picture" />

    <TextView
        android:id="@+id/add_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_item_comment2"
        android:text="Add a comment"
        android:textColor="#707070" />
</RelativeLayout>